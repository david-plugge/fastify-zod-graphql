{
    "ts-node": {
        "transpileOnly": true
    },
    "compilerOptions": {
        "strict": true,
        "target": "ES6",
        "module": "CommonJS",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "outDir": "dist",
        "incremental": true,
        "skipLibCheck": true
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}
